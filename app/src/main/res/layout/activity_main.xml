
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <com.mapbox.mapboxsdk.views.MapView
        android:id="@+id/custommapview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="maphere"
        android:background="#bada55"
        mapbox:mapid="@string/streetMapId"
        mapbox:accessToken="@string/testAccessToken"/>

    <ScrollView
        android:id="@+id/main_activity_video_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/custommapview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4a4a4a">

        <LinearLayout
            android:id="@+id/main_activity_video_scrollView_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#0000">



        </LinearLayout>
    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="8dp"
        >
        <ImageButton
            android:id="@+id/main_activity_start_menu"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_main_menu"
            android:alpha="0.5"
            android:clickable="true"
            />
        <ImageButton
            android:id="@+id/main_activity_start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_main_camera"
            android:clickable="true"
            android:longClickable="true"
            />
        <ImageButton
            android:id="@+id/main_activity_start_notification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_main_notification"
            android:alpha="0.5"
            android:clickable="true"
            />
    </RelativeLayout>

</RelativeLayout>
