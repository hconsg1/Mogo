    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="8dp"
        >
        <ImageButton
            android:id="@+id/main_activity_start_menu"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_main_menu"
            android:alpha="0.5"
            android:clickable="true"
            />
        <ImageButton
            android:id="@+id/main_activity_start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_main_camera"
            android:clickable="true"
            android:longClickable="true"
            />
        <ImageButton
            android:id="@+id/main_activity_start_notification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_main_notification"
            android:alpha="0.5"
            android:clickable="true"
            />
